<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="top"
        android:layout_marginBottom="5dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_collapseMode="pin">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/camera_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center|left"
            app:civ_border_color="@color/graye6"
            android:src="@mipmap/test_icon"
            app:civ_border_width="0.5dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="首页"
            android:textColor="@color/black"
            android:textSize="23dp" />

    </LinearLayout>

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/coordinatorlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true">


            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fitsSystemWindows="true"
                app:contentScrim="@color/white8"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fitsSystemWindows="true"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:background="@color/white"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="0.2">


                    <LinearLayout
                        android:id="@+id/dynamic_layout"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="@drawable/circle_angle_blue"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center|left"
                            android:paddingLeft="10dp"
                            android:text="附近人动态"
                            android:textColor="@color/white"
                            android:textSize="17dp" />


                        <FrameLayout
                            android:layout_width="170dp"
                            android:layout_height="match_parent"

                            >

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/circle_img1"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center|right"
                                app:civ_border_color="@color/white"
                                app:civ_border_width="1dp" />

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/circle_img2"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center|right"
                                android:layout_marginRight="18dp"
                                app:civ_border_color="@color/white"
                                app:civ_border_width="1dp" />

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/circle_img3"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center|right"
                                android:layout_marginRight="36dp"
                                app:civ_border_color="@color/white"
                                app:civ_border_width="1dp" />

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/circle_img4"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center|right"
                                android:layout_marginRight="52dp"
                                app:civ_border_color="@color/white"
                                app:civ_border_width="1dp" />

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/circle_img5"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center|right"
                                android:layout_marginRight="70dp"
                                app:civ_border_color="@color/white"
                                app:civ_border_width="1dp" />

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/circle_img6"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center|right"
                                android:layout_marginRight="88dp"
                                app:civ_border_color="@color/white"
                                app:civ_border_width="1dp" />

                        </FrameLayout>

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"
                            android:src="@mipmap/right_arrows" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="240dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/query_pass_layout"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginRight="3dp"
                                android:layout_weight="1"
                                android:background="@drawable/circle_angle_yellow"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="55dp"
                                    android:layout_height="55dp"
                                    android:layout_gravity="center"
                                    android:layout_marginBottom="10dp"
                                    android:src="@mipmap/eye_icon" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="查询上网密码"
                                    android:textColor="@color/white"
                                    android:textSize="13dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/wifi_layout"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="3dp"
                                android:layout_weight="1"
                                android:background="@drawable/circle_angle_orange"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="55dp"
                                    android:layout_height="55dp"
                                    android:layout_gravity="center"
                                    android:layout_marginBottom="10dp"
                                    android:src="@mipmap/wifi_icon" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="一键连接WIFI"
                                    android:textColor="@color/white"
                                    android:textSize="13dp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">


                            <LinearLayout
                                android:id="@+id/nearby_wb_layout"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginRight="3dp"
                                android:layout_weight="1"
                                android:background="@drawable/circle_angle_violet"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="55dp"
                                    android:layout_height="55dp"
                                    android:layout_gravity="center"
                                    android:layout_marginBottom="10dp"
                                    android:src="@mipmap/windows_icon" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="附近的网吧"
                                    android:textColor="@color/white"
                                    android:textSize="13dp" />
                            </LinearLayout>


                            <LinearLayout
                                android:id="@+id/player_community_layout"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="3dp"
                                android:layout_weight="1"
                                android:background="@drawable/circle_angle_turquoise"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="55dp"
                                    android:layout_height="55dp"
                                    android:layout_gravity="center"
                                    android:layout_marginBottom="10dp"
                                    android:src="@mipmap/logo_icon" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="玩家社区"
                                    android:textColor="@color/white"
                                    android:textSize="13dp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <!-- 广告布局 -->
                    <FrameLayout
                        android:id="@+id/banner_layout"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginTop="5dp">

                        <FrameLayout
                            android:id="@+id/page_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <android.support.v4.view.ViewPager
                                android:id="@+id/vp_main"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                            <LinearLayout
                                android:id="@+id/ll_main_dot"
                                android:layout_width="match_parent"
                                android:layout_height="15dp"
                                android:layout_gravity="bottom"
                                android:layout_marginTop="10dp"
                                android:gravity="center_horizontal"
                                android:orientation="horizontal" />
                        </FrameLayout>

                        <ImageView
                            android:id="@+id/banner_img"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="gone" />
                    </FrameLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/content11" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="附近的人"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        android:textSize="16dp" />
                </LinearLayout>


            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:scrollbars="none"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                />
    </android.support.design.widget.CoordinatorLayout>

</LinearLayout>