<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/titles_layout_include"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="完善资料"
            android:textColor="@color/black"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/phone_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="完善资料以方便为你提供更好的服务"
            android:textColor="@color/content3"
            android:textSize="12dp" />

        <ImageView
            android:id="@+id/head_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:src="@mipmap/test_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="上传头像"
            android:textColor="@color/content6"
            android:textSize="13dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginTop="3dp"
                    android:text="昵称"
                    android:textColor="@color/black"></TextView>

                <EditText
                    android:id="@+id/nickname_ed"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="50dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:layout_marginLeft="15dp"
                    android:gravity="bottom|left"
                    android:maxEms="10"
                    android:maxLength="10"
                    android:singleLine="true"
                    android:textSize="25dp"
                    android:theme="@style/Gary_EditText" />

            </LinearLayout>

        </LinearLayout>

        <laoyou.com.laoyou.view.RippleView
            android:id="@+id/commit_bt"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_gravity="center|left"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/gray_bt_normal"
            android:gravity="center"
            android:text="完成"
            android:textColor="@color/white"
            android:textSize="13dp"
            ripple:alphaFactor="0.5"
            ripple:hover="false"
            ripple:rippleColor="@color/white" />

    </LinearLayout>
</LinearLayout>