<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/slide_bakc"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/login_ll"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginTop="28dp"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:id="@+id/user_icon"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:src="@mipmap/test_icon" />
            <!--android:transitionName="transition_morph_view"-->


            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:textSize="16dp" />

        </LinearLayout>

        <View style="@style/line_styles" />

        <LinearLayout
            android:id="@+id/layout_1"
            style="@style/SlideMenuLinerLayout">

            <TextView
                android:id="@+id/silide_tv1"
                style="@style/SlideMenuText"
                android:text="实名认证" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginRight="-28dp" />
        </LinearLayout>

        <View style="@style/line_styles" />

        <LinearLayout
            android:id="@+id/layout_3"
            style="@style/SlideMenuLinerLayout">

            <TextView
                android:id="@+id/silide_tv3"
                style="@style/SlideMenuText"
                android:text="修改密码" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginRight="-28dp" />
        </LinearLayout>

        <View style="@style/line_styles" />

        <LinearLayout
            android:id="@+id/layout_2"
            style="@style/SlideMenuLinerLayout">

            <TextView
                android:id="@+id/silide_tv2"
                style="@style/SlideMenuText"
                android:text="退出登录" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginRight="-28dp" />
        </LinearLayout>

        <View style="@style/line_styles" />

    </LinearLayout>

</LinearLayout>