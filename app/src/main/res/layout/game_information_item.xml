<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/white_corners6"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <laoyou.com.laoyou.view.CustomRoundImageView
                android:id="@+id/information_img"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/test_head_icon" />

            <TextView
                android:id="@+id/information_titles_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:text="魔兽8.0明年有望6月开启，怀旧服40人团本登场"
                android:textColor="@color/black0" />

            <TextView
                android:id="@+id/information_content_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="left"
                android:maxLines="2"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:paddingBottom="5dp"
                android:text="在魔兽8.0中，我们得知了人类七国之一库尔提拉斯王国将要重新回归联盟，对于这个失去消失已久的国度"
                android:textColor="@color/content3"
                android:textSize="12sp" />

        </LinearLayout>

    </FrameLayout>
</LinearLayout>